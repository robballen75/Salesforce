<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <customSettingsType>Hierarchy</customSettingsType>
    <customSettingsVisibility>Protected</customSettingsVisibility>
    <description>Settings related to the Client Relations Contact Notification mechanism</description>
    <enableEnhancedLookup>false</enableEnhancedLookup>
    <enableFeeds>false</enableFeeds>
    <fields>
        <fullName>Active__c</fullName>
        <defaultValue>false</defaultValue>
        <description>Flag indication if the Contact Notification should be active or not.</description>
        <externalId>false</externalId>
        <label>Active</label>
        <trackTrending>false</trackTrending>
        <type>Checkbox</type>
    </fields>
    <fields>
        <fullName>Customers_Only__c</fullName>
        <defaultValue>true</defaultValue>
        <description>Indicates if notification should be sent only when oat least one of the accounts involved in an employment change (or a new contact) is a customer.</description>
        <externalId>false</externalId>
        <label>Customers Only</label>
        <trackTrending>false</trackTrending>
        <type>Checkbox</type>
    </fields>
    <fields>
        <fullName>Notification_Address__c</fullName>
        <description>Email address the notifications should be sent to</description>
        <externalId>false</externalId>
        <label>Notification Address</label>
        <required>true</required>
        <trackTrending>false</trackTrending>
        <type>Email</type>
        <unique>false</unique>
    </fields>
    <fields>
        <fullName>Sender_Display_Name__c</fullName>
        <description>Display name for the sender of the email notification.  This is what will show up in the From column of the Outlook inbox.</description>
        <externalId>false</externalId>
        <label>Sender Display Name</label>
        <length>30</length>
        <required>true</required>
        <trackTrending>false</trackTrending>
        <type>Text</type>
        <unique>false</unique>
    </fields>
    <label>Client Relations Contact Notification</label>
</CustomObject>
